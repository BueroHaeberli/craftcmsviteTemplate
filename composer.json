{
  "name": "onedarnleyroad/craftcms",
  "description": "Boilerplate Craft CMS set up for all One Darnley Road projects.",
  "version": "1.0.0",
  "type": "project",
  "require": {
    "craftcms/cms": "^3.0.0",
    "craftcms/redactor": "^2.1",
    "fruitstudios/linkit": "^1.1",
    "fruitstudios/searchit": "^1.0",
    "nystudio107/craft-retour": "^3.0",
    "nystudio107/craft-seomatic": "^3.1",
    "vlucas/phpdotenv": "^2.4.0",
    "nystudio107/craft-scripts": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    },
    "files": [
      "env.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"copy('.env.example', '.env');\"",
      "@php -r \"unlink('LICENSE.md');\"",
      "@php -r \"unlink('CHANGELOG.md');\"",
      "@php -r \"unlink('README.md');\"",
      "@php -r \"unlink('.gitignore');\"",
      "@php -r \"rename('.gitignore.default', '.gitignore');\"",
      "@php -r \"unlink('composer.json');\"",
      "@php -r \"rename('composer.json.default', 'composer.json');\"",
      "@composer dump-autoload -o",
      "@php craft setup/welcome"
    ]
  }
}
